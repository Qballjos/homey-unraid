{
  "name": {
    "en": "Unraid Server"
  },
  "class": "other",
  "capabilities": [
    "measure_cpu",
    "measure_memory",
    "measure_temperature",
    "alarm_generic"
  ],
  "images": {
    "large": "/drivers/unraid-server/assets/icon-large.png",
    "small": "/drivers/unraid-server/assets/icon-small.png"
  },
  "settings": [
    {
      "type": "group",
      "label": { "en": "Connection Settings" },
      "children": [
        {
          "id": "baseUrl",
          "type": "text",
          "label": { "en": "Server URL" },
          "hint": { "en": "Example: http://192.168.1.100:8080/graphql" },
          "value": "http://tower:8080/graphql"
        },
        {
          "id": "apiKey",
          "type": "password",
          "label": { "en": "API Key" },
          "hint": { "en": "Get from Unraid: Settings → API" },
          "value": ""
        }
      ]
    },
    {
      "type": "group",
      "label": { "en": "Polling Settings" },
      "children": [
        {
          "id": "pollInterval",
          "type": "number",
          "label": { "en": "Poll interval (seconds)" },
          "value": 60,
          "attr": { "min": 10, "max": 300, "step": 5 }
        }
      ]
    },
    {
      "id": "domains",
      "type": "group",
      "label": { "en": "Data to poll" },
      "children": [
        { "id": "pollArray", "type": "checkbox", "label": { "en": "Array & disks" }, "value": true },
        { "id": "pollDocker", "type": "checkbox", "label": { "en": "Docker containers" }, "value": true },
        { "id": "pollVms", "type": "checkbox", "label": { "en": "VMs" }, "value": true },
        { "id": "pollShares", "type": "checkbox", "label": { "en": "Shares/cache" }, "value": false }
      ]
    },
    {
      "id": "thresholds",
      "type": "group",
      "label": { "en": "Thresholds" },
      "children": [
        { "id": "cpuThreshold", "type": "number", "label": { "en": "CPU %" }, "value": 90, "attr": { "min": 10, "max": 100, "step": 1 } },
        { "id": "diskTempThreshold", "type": "number", "label": { "en": "Disk temp °C" }, "value": 60, "attr": { "min": 20, "max": 90, "step": 1 } }
      ]
    },
    {
      "id": "allowControl",
      "type": "checkbox",
      "label": { "en": "Allow control actions" },
      "value": false
    }
  ]
}

