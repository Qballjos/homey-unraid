{
  "_comment": "Homey app manifest for Unraid integration",
  "id": "com.unraid",
  "version": "0.1.0",
  "compatibility": ">=6.0.0",
  "sdk": 3,
  "author": {
    "name": "Jos Visser",
    "email": "qballjos@gmail.com",
    "url": "https://josvisserict.nl"
  },
  "name": {
    "en": "Unraid"
  },
  "icon": "/assets/icon-small.png",
  "images": {
    "small": "/assets/icon-small.png",
    "large": "/assets/icon-large.png"
  },
  "brandColor": "#10b981",
  "description": {
    "en": "Lightweight monitoring and control for your Unraid server via the official GraphQL API."
  },
  "category": [
    "tools"
  ],
  "capabilities": {
    "measure_cpu": {
      "type": "number",
      "title": { "en": "CPU Load" },
      "units": { "en": "%" },
      "min": 0,
      "max": 100,
      "decimals": 0,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "measure_memory": {
      "type": "number",
      "title": { "en": "Memory Used" },
      "units": { "en": "%" },
      "min": 0,
      "max": 100,
      "decimals": 0,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "measure_disk_usage": {
      "type": "number",
      "title": { "en": "Array Space Used" },
      "units": { "en": "%" },
      "min": 0,
      "max": 100,
      "decimals": 1,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "measure_containers": {
      "type": "number",
      "title": { "en": "Containers Running" },
      "units": { "en": "containers" },
      "min": 0,
      "decimals": 0,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "measure_vms": {
      "type": "number",
      "title": { "en": "VMs Running" },
      "units": { "en": "VMs" },
      "min": 0,
      "decimals": 0,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "meter_uptime": {
      "type": "number",
      "title": { "en": "Uptime" },
      "units": { "en": "hours" },
      "min": 0,
      "decimals": 1,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "array_status": {
      "type": "string",
      "title": { "en": "Array Status" },
      "getable": true,
      "setable": false,
      "uiComponent": null
    }
  },
  "platforms": [
    "local"
  ],
  "drivers": [
    {
      "id": "unraid-server",
      "name": {
        "en": "Unraid Server"
      },
      "class": "other",
      "images": {
        "large": "/drivers/unraid-server/assets/icon-large.png",
        "small": "/drivers/unraid-server/assets/icon-small.png"
      },
      "capabilities": [
        "measure_cpu",
        "measure_memory",
        "measure_temperature",
        "measure_disk_usage",
        "measure_containers",
        "measure_vms",
        "meter_uptime",
        "array_status",
        "alarm_generic"
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "array_started",
        "title": { "en": "Array started" }
      },
      {
        "id": "array_stopped",
        "title": { "en": "Array stopped" }
      },
      {
        "id": "parity_completed",
        "title": { "en": "Parity check completed" }
      },
      {
        "id": "container_state_changed",
        "title": { "en": "Container state changed" },
        "titleFormatted": { "en": "Container [[name]] changed from [[from]] to [[to]]" },
        "args": [
          { "name": "name", "type": "text" },
          { "name": "from", "type": "text" },
          { "name": "to", "type": "text" }
        ]
      },
      {
        "id": "vm_state_changed",
        "title": { "en": "VM state changed" },
        "titleFormatted": { "en": "VM [[name]] changed from [[from]] to [[to]]" },
        "args": [
          { "name": "name", "type": "text" },
          { "name": "from", "type": "text" },
          { "name": "to", "type": "text" }
        ]
      },
      {
        "id": "cpu_over_threshold",
        "title": { "en": "CPU usage over threshold" },
        "titleFormatted": { "en": "CPU usage is [[percent]]%" },
        "args": [
          { "name": "percent", "type": "number" }
        ]
      }
    ],
    "conditions": [
      {
        "id": "array_is_started",
        "title": { "en": "Array is started" }
      },
      {
        "id": "container_is_running",
        "title": { "en": "Container is running" },
        "titleFormatted": { "en": "Container [[name]] is running" },
        "args": [{ "name": "name", "type": "text" }]
      },
      {
        "id": "vm_is_running",
        "title": { "en": "VM is running" },
        "titleFormatted": { "en": "VM [[name]] is running" },
        "args": [{ "name": "name", "type": "text" }]
      }
    ],
    "actions": [
      {
        "id": "start_array",
        "title": { "en": "Start array" }
      },
      {
        "id": "stop_array",
        "title": { "en": "Stop array" }
      },
      {
        "id": "start_parity_check",
        "title": { "en": "Start parity check" }
      },
      {
        "id": "start_container",
        "title": { "en": "Start container" },
        "titleFormatted": { "en": "Start container [[name]]" },
        "args": [{ "name": "name", "type": "text" }]
      },
      {
        "id": "stop_container",
        "title": { "en": "Stop container" },
        "titleFormatted": { "en": "Stop container [[name]]" },
        "args": [{ "name": "name", "type": "text" }]
      },
      {
        "id": "restart_container",
        "title": { "en": "Restart container" },
        "titleFormatted": { "en": "Restart container [[name]]" },
        "args": [{ "name": "name", "type": "text" }]
      },
      {
        "id": "update_container",
        "title": { "en": "Update container (pull image)" },
        "titleFormatted": { "en": "Update container [[name]]" },
        "args": [{ "name": "name", "type": "text" }]
      },
      {
        "id": "start_vm",
        "title": { "en": "Start VM" },
        "titleFormatted": { "en": "Start VM [[name]]" },
        "args": [{ "name": "name", "type": "text" }]
      },
      {
        "id": "stop_vm",
        "title": { "en": "Stop VM" },
        "titleFormatted": { "en": "Stop VM [[name]]" },
        "args": [{ "name": "name", "type": "text" }]
      },
      {
        "id": "reboot_vm",
        "title": { "en": "Reboot VM" },
        "titleFormatted": { "en": "Reboot VM [[name]]" },
        "args": [{ "name": "name", "type": "text" }]
      },
      {
        "id": "send_unraid_notification",
        "title": { "en": "Send Unraid notification" },
        "titleFormatted": { "en": "Send notification: [[message]]" },
        "args": [{ "name": "message", "type": "text" }]
      }
    ]
  },
  "speechExamples": [
    {
      "example": {
        "en": "Hey Homey, what is the Unraid array status?"
      }
    }
  ]
}

